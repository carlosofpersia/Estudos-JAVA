package br.com.caelum.jdbc.modelo;

import java.util.ArrayList;
import java.util.List;

public class Categorias {

	private final Integer id;
	private final String nome;

	private final List<Produtos> produtos = new ArrayList<>();

	public Categorias(int id, String nome) {
		this.id = id;
		this.nome = nome;
	}

	public Integer getId() {
		return id;
	}

	public String getNome() {
		return nome;
	}

	@Override
	public String toString() {
		return "Categorias [id=" + id + ", nome=" + nome + "]";
	}

	public void adiciona(Produtos p) {
		produtos.add(p);
	}

}

/*
 *
 *
 *
 * create table Categoria (id integer generated by default as identity primary
 * key, nome varchar(255))
 * 
 * select * from categoria
 * 
 * select * from Produto
 * 
 * 
 * insert into Categoria (id,nome) values (1, 'Eletrodoméstico'); insert into
 * Categoria (id,nome) values (2, 'Eletrônico'); insert into Categoria (id,nome)
 * values (3, 'Móvel');
 * 
 * 
 * alter table Produto add column categoria_id integer
 *
 * 
 * update Produto set categoria_id=1 where id in (1,2)
 * 
 * update Produto set categoria_id=2 where id in (3, 80, 81, 82)
 * 
 * update Produto set categoria_id=3 where id in (83, 84)
